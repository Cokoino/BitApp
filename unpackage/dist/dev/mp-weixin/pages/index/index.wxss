.uni-title {
	/* width: 100%; */
	/* height: 80rpx; */
	text-align: center;
}
.uni-mask {
	position: fixed;
	top: 0;
	left: 0;
	bottom: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 100%;
	background: rgba(0, 0, 0, 0.6);
	padding: 0 30rpx;
	box-sizing: border-box;
}
.uni-scroll_box {
	width: 95%;
	height: 50%;
	background: #fff;
	border-radius: 20rpx;
}
.uni-list-box {
	margin: 0 20rpx;
	padding: 15rpx 0;
	border-bottom: 10px #f5f5f5 solid;
	border: 10px #f5f5f5 solid;
	box-sizing: border-box;    /*box-sizing属性允许您以特定的方式定义匹配某个区域的特定元素。*/
}
.uni-list_name {
	font-size: 30rpx;
	color: #333;
}
.uni-list_item {
	font-size: 24rpx;
	color: #555;
	line-height: 1.5;
	text-align: center;
}

